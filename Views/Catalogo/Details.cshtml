@model AngelaStoreApp.Models.Product

@{
  ViewData["Title"] = "Details";
}
<form asp-controller="Catalogo" asp-action="Add">
  <input type="text" hidden="hiden" name="id" value="@Model.Id">
  <div class="container-detalles">
    <div class="seccion-titulo titulo-detalles">
      <h5 class="titulo-prim">@Html.DisplayFor(model => model.Name)</h5>
    </div>
    <div class="img-detalles">
      <img class="img-producto" src="@Url.ActionLink("MostrarImagen","Catalogo",new { id=Model.Id })"
        alt="@Html.DisplayFor(model => model.ImagenName)" />
    </div>
    <div class="info-detalles">
      <label class="dec-label">Descripción</label>
      <p class="desc-product">@Html.DisplayFor(model => model.Descripcion)</p>
      <div class="form-group desc-talla">
        <label class="dec-label">Talla</label>
        <select name="talla" class="custom-select form-control">
          <option value="S">Small</option>
          <option value="M">Medium</option>
          <option value="L">Large</option>
        </select>
      </div>
      <label class="dec-label">Precio</label>
      <h5 class="desc-precio">S/ @Html.DisplayFor(model => model.Price)</h5>
      <button class="btn btn-prim" type="submit">Añadir Carrito</button>
    </div>
  </div>
</form>