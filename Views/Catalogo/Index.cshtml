@model IEnumerable<AngelaStoreApp.Models.Product>
@{
  ViewData["Title"] = "Catalogo";
}

<div class="seccion-titulo">
  <h5 class="titulo-prim">@ViewData["Title"]</h5>
</div>
<div class="container-buscar">
  <form>
    <input class="form-control buscar-producto" type="search" placeholder="Buscar" aria-label="Search"
      value=" @ViewData["Getemployeedetails"]" name="Empsearch">
    <button class="btn btn-prim" type="submit">Buscar</button>
  </form>
</div>
<div class="seccion-titulo">
  <h5 class="titulo-seccion">@ViewData["Message"]</h5>
</div>
<div class="contenedor-catalogo">
  @foreach (var item in Model)
  {
    @if (item.Status.Equals("Activo"))
    {
      <a asp-action="Details" asp-route-id="@item.Id">
        <div class="card catal">
          <div class="card-body">
            <div class="card-img-actions">
              <img class="img-catalogo" src="@Url.ActionLink("MostrarImagen","Catalogo",new { id=item.Id })" />
            </div>
          </div>
          <div class="card-body">
            <h5 class="nom-producto">@Html.DisplayFor(modelItem => item.Name)</h5>
            <p class="precio-producto">S/ @Html.DisplayFor(modelItem => item.Price)</p>
            <div class="catalogo-btn">
            </div>
          </div>
        </div>
      </a>
    }

  }
</div>